{
  "$schema": "http://json.schemastore.org/template",
  "author": "Google Inc.",
  "groupIdentity": "Google.Cloud.Templates.WebApi",
  "identity": "Google.Cloud.Templates.WebApi.CSharp",
  "name": "Google Cloud ASP.NET Core WebAPI",
  "shortName": "gcpwebapi",
  "description": "ASP.NET Core WebAPI template for Google Cloud",
  "classifications": [
    "GCP",
    "Web",
    "ASP.NET",
    "WebAPI"
  ],
  "defaultName": "MyGoogleCloudWebApiApp",
  "sourceName": "Google.Cloud.Templates.WebApi.CSharp",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**"
      ]
    }
  ],
  "symbols": {
    "framework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "netcoreapp2.0",
          "description": ".NET Core 2.0"
        },
        {
          "choice": "netcoreapp2.1",
          "description": ".NET Core 2.1"
        }
      ],
      "defaultValue": "netcoreapp2.1",
      "replaces": "netcoreapp2.1",
      "description": "The target Framework."
    },
    "gcp-project-id": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "",
      "description": "The id of the Google Cloud Platform project to send Stackdriver logs, error reports, and traces to. Only required when running outside of GCP.",
      "replaces": "gcp-project-id"
    },
    "createYear": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "2017"
    },
    "port": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "fallback": 5000
      },
      "replaces": "5000"
    },
    "Framework2_1": {
      "type": "computed",
      "datatype": "bool",
      "value": "(framework == \"netcoreapp2.1\")"
    },
    "Framework2_0": {
      "type": "computed",
      "datatype": "bool",
      "value": "(framework == \"netcoreapp2.0\")"
    },
    "GcpProjectIdInConfig": {
      "type": "computed",
      "datatype": "bool",
      "value": "(gcp-project-id != \"\")"
    }
  }
}